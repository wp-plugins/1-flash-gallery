<?xml version="1.0" encoding="utf-8"?>
<gallery>
  <params> 
        <group name="gallery" title="Settings">
          <p name="source" title="Images source" control="select" default="local" values="local,flickr,picasa,photobucket" />
          <p name="type" title="Gallery Type" control="select" default="byFolder" values="byFolder,flat" />
        </group>
	<group name="slideshow" title="Slideshow">
          <p name="showEnable" title="Enable Slideshow" control="checkbox"  default="0" values="1" />
          <p name="autostartSlideshow" title="Auto Start" control="checkbox"  default="0" values="1"/>
	  <p name="showDelay" title="Delay, sec." control="slider"  default="2" values="0..20:1"/>
	  <p name="fullscreenEnable" title="Fullscreen" control="checkbox" default="0" values="1" />
	  <p name="backgroundType" title="Background Type" control="select" default="color" values="color,image" />
	  <p name="backgroundAlpha" title="Background Opacity" control="slider" default="0.7" values="0..1:0.1" />
	  <p name="backgroundColor" title="Background Color" control="color" default="0x000000" />
	  <p name="useEmbedFont" title="Use Embed Font" control="checkbox" default="0" values="1" />
	  <p name="theme" title="Theme" control="select" default="black" values="white,black,blue,red,green" />
	  <p name="musicPath" title="Path to music" control="text" default="" type="file" />
          <p name="backgroundPath" title="Background Image" control="text" default="" values="" type="file" />
          <p name="stopMusicWhenShowStop" title="Stop Music When Show Stop" control="checkbox" default="0" values="1" />
          <p name="sendID" title="Show text under slideshow" control="checkbox" default="0" values="1" />
	</group>
	
        <group name="image" title="Image">
	  <p name="captionPosition" title="Caption Position" control="select" default="top" values="top,bottom,none" />
	  <p name="captionAlign" title="Caption Align" control="select" default="left" values="left,center,right" />
	  <p name="captionFont" title="Caption Font" control="select" default="Verdana" values="Verdana" />
	  <p name="captionSize" title="Title Size" control="slider" default="15" values="6..25:1" />
	  <p name="captionBold" title="Caption Bold Text" control="checkbox"  default="0" values="1" />
	  <p name="captionColor" title="Caption Font Color" control="color" default="0xffffff" />
	  <p name="captionBackgroundColor" title="Caption Background Color" control="color" default="0x000000" />
	  <p name="width" title="Width" control="text" default="660" class="numeric" />
	  <p name="height" title="Height" control="text" default="400" class="numeric" />
	  <p name="scale" title="Scale Mode" control="select" default="fit" values="fit, fill, noscale"/>
	  <p name="dimmingBackgroundEnable" title="Dimming Background" control="checkbox" default="0" values="1" /> 
          <p name="cornerRadius" title="Corner Radius" control="text" default="0" class="numeric" />
          <p name="shadowDistance" title="Shadow Distance" control="text" default="0" class="numeric" />
          <p name="shadowSize" title="Shadow Size" control="text" default="0" class="numeric" />
          <p name="shadowColor" title="Shadow Color" control="color" default="0xFFFFFF" />
          <p name="shadowAngle" title="Shadow Angle" control="text" default="0" class="numeric" />
          <p name="linkTarget" title="Link Target" control="select"  default="_blank" values="_blank,_self" />
          <p name="imageAsLink"  title="Image As Link" control="checkbox"  default="1" values="1" />
          <p name="navigationMode" title="Navigation Mode" control="select" default="button" values="mouse,button,none" />
          <p name="playButtonBackgroundColorOver" title="Background Color Over Play Button" control="color" default="0x000000" />
          <p name="playButtonBackgroundColorOut" title="Background Color Out of Play Button" control="color" default="0xFFFFFF" />
          <p name="playButtonColorOver" title="Color Over Play Button" control="color" default="0xFFFFFF" />
          <p name="playButtonColorOut" title="Color Out of Play Button" control="color" default="0x000000" />
          <p name="playButtonAlphaOver" title="Opacity Over Play Button" control="slider" default="0.9" values="0..1:0.1" />
          <p name="playButtonAlphaOut" title="Opacity Out of Play Button" control="slider" default="0.5" values="0..1:0.1" />
          <p name="fullscreenButtonBackgroundColorOver" title="Background Color Over Fullscreen Button" control="color" default="0x000000" />
          <p name="fullscreenButtonBackgroundColorOut" title="Background Color Out of Fullscreen Button" control="color" default="0xFFFFFF" />
          <p name="fullscreenButtonColorOver" title="Color Over Fullscreen Button" control="color" default="0xFFFFFF" />
          <p name="fullscreenButtonColorOut" title="Color Out of Fullscreen Button" control="color" default="0x000000" />
          <p name="fullscreenButtonAlphaOver" title="Opacity Over Fullscreen Button" control="slider" default="0.9" values="0..1:0.1" />
          <p name="fullscreenButtonAlphaOut" title="Opacity Out of Fullscreen Button" control="slider" default="0.5" values="0..1:0.1" />
          <p name="flipButtonBackgroundColorOver" title="Background Color Over Flip Button" control="color" default="0xFFFFFF" />
          <p name="flipButtonBackgroundColorOut" title="Background Color Out of Flip Button" control="color" default="0xFFFFFF" />
          <p name="flipButtonColorOver" title="Color Over Flip Button" control="color" default="0x666666" />
          <p name="flipButtonColorOut" title="Color Out of Flip Button" control="color" default="0xCCCCCC" />
          <p name="flipButtonAlphaOver" title="Opacity Over Flip Button" control="slider" default="1" values="0..1:0.1" />
          <p name="flipButtonAlphaOut" title="Opacity Out of Flip Button" control="slider" default="0.7" values="0..1:0.1" />
          <p name="preloaderEnable" title="Preloader Enable" control="checkbox" default="1" values="1" />
          <p name="preloaderColor" title="Preloader Color" control="color" default="0xFFFFFF" />
        </group>
        
	<group name="scroller" title="Scroller">
	  <p name="fogEnable" title="Fog Enable" control="checkbox"  default="0" values="1" />
	  <p name="fogWidth" title="Fog Width" control="text"  default="50" class="numeric" />
	  <p name="xItemDistance" title="Horizontal Margin" control="text"  default="50" class="numeric" />
	  <p name="yItemDistance" title="Vertical Width" control="text"  default="50" class="numeric" />
	  <p name="scrollingDirection" title="Scrolling Direction" control="select" default="top" values="top,left" />
	  <p name="scrollingSpeed" title="Scrolling Speed" control="slider" default="75" values="10..500:10" />
	</group>
	
	<group name="item" title="Item">
	  <p name="width" title="Width" control="text" default="200" class="numeric" />
	  <p name="height" title="Height" control="text" default="140" class="numeric" />
	  <p name="scale" title="Scale Mode" control="select" default="fit" values="fit,fill,noscale"/>
	  <p name="cornerRadius" title="Corner Radius" control="slider" default="5" values="1..50:1" />
	  <p name="borderThickness" title="Border Width" control="slider" default="2" values="1..10:1" />
	  <p name="borderColor" title="Border Color" control="color" default="0x000000" />
	  <p name="titlePosition" title="Title Position" control="select" default="followMouse" values="followMouse,top,bottom,none" />
	  <p name="titleAlign" title="Title Align" control="select" default="left" values="left,center,right" />
	  <p name="titleFont" title="Title Font" control="select" default="Verdana" values="Verdana" />
	  <p name="titleSize" title="Title Size" control="slider" default="13" values="6..25:1" />
	  <p name="titleFontColor" title="Title Color" control="color" default="0xffffff" />
	  <p name="titleBackgroundColor" title="Title Background Color" control="color" default="0x000000" />
	  <p name="titleBold" title="Title Bold Text" control="checkbox"  default="0" values="1" />
	  <p name="shadowDistance" title="Shadow Distance" control="text" default="0" class="numeric" />
	  <p name="shadowSize" title="Shadow Width" control="slider" default="10" values="0..50:5" />
	  <p name="shadowColor" title="Shadow Color" control="color" default="0xffffff" />
	  <p name="shadowAngle" title="Shadow Angle" control="slider" default="0" values="0..180:5" />
	  <p name="selectTintEnable" title="Select Tint" control="checkbox" default="0" values="1"/>
	  <p name="preloaderEnable" title="Preloader" control="checkbox" default="0" values="1"/>
	  <p name="preloaderColor" title="Preloader Color" control="color" default="0xffffff" />
	</group>
	
	<group name="navigation" title="Controls">
	  <p name="enable" title="Enable" control="checkbox" default="0" values="1" />
	  <p name="albumIconEnable" title="Show Album Icon" control="checkbox" default="0" values="1" />
	  <p name="align" title="Align" control="select" default="left" values="right,center,left" />
	  <p name="name" title="Navigation Box Text" control="text" default="" values="" />
	  <p name="colorBackground" title="Background Color" control="color" default="0x000000" />
	  <p name="colorButton" title="Button Color" control="color" default="0xffffff" />
	</group>
	
	<group name="flickr" title="Flickr" type="source">
	  <p name="searchBy" title="Search By" control="select" default="photos" values="photos,keyword,userID,albumID" />
	  <p name="userID" title="User ID" control="text" default="" />
	  <p name="keyword" title="Keyword" control="text" default="" />
	  <p name="max" title="Max Photos Number" control="text" class="numeric" default="20" />
	  <p name="albumID" title="Album ID" control="text" class="numeric" />
	</group>
	
	<group name="picasa" title="Picasa" type="source">
	  <p name="searchBy" title="Search By" control="select" default="photos" values="photos,keyword,userID,albumID" />
	  <p name="userName" title="User Name" control="text" default="" />
	  <p name="keyword" title="Keyword" control="text" default="" />
	  <p name="max" title="Max Photos Number" control="text" class="numeric" default="20" />
	  <p name="albumID" title="Album ID" control="text" class="numeric" default="" />
	  <p name="albumName" title="Album Name" control="text" default="" />
	</group>
	
	<group name="photobucket" title="Photobucket" type="source">
	  <p name="searchString" title="Search" control="text" default="" />
	  <p name="max" title="Max Photos Number" control="text" class="numeric" default="20" />
	</group>
</params>
</gallery>